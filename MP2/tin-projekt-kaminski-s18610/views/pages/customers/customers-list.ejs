<%- include('../../fragments/header.ejs') %>
    
    <main>
        <h2>Lista Klientów</h2>
        
        <table class="table-list">
            
            <thead>
                <tr>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Adres</th>
                    <th>Numer telefonu</th>
                    <th>Akcje</th>
                </tr>
            </thead>
    
            <tbody> 
            <% for (let customer of customers) { %>
                <tr>
                    <td><%= customer.name %></td>
                    <td><%= customer.surname %></td>
                    <td><%= customer.address %></td>
                    <td><%= customer.phone_number %></td>
                    <td>
                        <ul class="list-actions">
                            <li>
                                <a href="/customers/details/<%=customer._id%>" class="list-actions-button-details">Szczegóły</a>
                            </li>
                            <li>
                                <a href="/customers/edit/<%=customer._id%>" class="list-actions-button-edit">Edytuj</a>
                            </li>
                            <li>
                                <a href="/customers/delete/<%=customer._id%>" class="list-actions-button-delete">Usuń</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            <% } %>
            </tbody>
            
        </table>
        
        <p><a href="/customers/add" class="button-add">Dodaj nowego klienta</a></p>
        
    </main>
    
<%- include('../../fragments/footer.ejs') %>